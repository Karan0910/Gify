<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gif"
            type="com.company.gify.model.Gif">

        </variable>
        <variable
            name="gifData"
            type="com.company.gify.db.entities.GifData">

        </variable>
        
        <variable
            name="trendingViewModel"
            type="com.company.gify.viewmodel.TrendingViewModel" />
        <variable
            name="favViewModel"
            type="com.company.gify.viewmodel.FavouriteViewModel" />
    </data>

    <androidx.cardview.widget.CardView

        android:id="@+id/vehicle_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:focusable="true"
        android:clickable="true"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            >


            <ImageView
                android:id="@+id/image_view_gif"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:focusable="true" />


                 <com.jackandphantom.androidlikebutton.AndroidLikeButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                     android:id="@+id/fav_img"
                android:layout_gravity="end"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:like_icon="@drawable/ic_fav_filled"
                app:unlike_icon="@drawable/ic_fav_empty"
                android:visibility="gone"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</layout>